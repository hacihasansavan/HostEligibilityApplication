                    <Border Background="#FFFFFF"
                            Height="108"
                            VerticalAlignment="Top"
                            CornerRadius="20"
                            Opacity="0.3" Margin="10,212,10,0" />
                    <Border Background="#FFFFFF"
                            Height="108"
                            VerticalAlignment="Top"
